<%
    # Get the total number of design detail items - assume this is the same across all the studies being compared
    n_items = @compareset.getNumDistinctOutcomeDetails()
    if (!@compareset.sameEFIDs())
%>
    <b>Note: </b>The studies selected were compiled from different Extraction Forms, the outcome details below are presented for review but will not
    be updated in the consensus study record.
    <p/>
<%
    end
%>
    <input type="hidden" name="merge_outds_n_items" value="<%= n_items %>">
    <table class="compare_studies_table">
        <tr>
            <th class="compare_studies_title">Data</th>
<%
    for studyidx in (0..@compareset.size() - 1)
%>
            <th class="compare_studies_title">
            <!--[Study ID <%= @compareset.getStudyID(studyidx).to_s %>]-->
            <span class='comparator_col_head'>Study <%= @alphabet[studyidx] %></span>
            <br/>
            Created by <%= User.get_name(@compareset.getCreatorID(studyidx)) %><br/>
            <input type="checkbox" name="select_study_outd_<%= studyidx.to_s %>" value="1" onclick="selectAllDD(<%= studyidx.to_s %>,<%= @compareset.size() %>,<%= n_items.to_s %>)" title="Select all Outcome Detail Information for Study <%= @alphabet[studyidx]%>"> Select This Study
            </th>
<%
    end    
%>
            <th class="compare_studies_title">&nbsp;</th>
            <th class="compare_studies_title">Consensus<br>Value</th>
        </tr>
<%
    rcolor = ["#FFFFFF","#EAEAEA"]
    ridx = 0
    for outdidx in 0..n_items - 1
        dispname = @compareset.getOutcomeDetailName(outdidx)
%>
        <tr bgcolor="<%= rcolor[ridx % 2] %>">
            <td class="compare_studies_item">
            [<%= outdidx %>] <%= dispname %>  
            </td>
<%
        # Determine if there are any differences
        ndiff = @compareset.distinctOutcomeDetail(dispname)

        # Now display values across stucies horizontally
        for studyidx in (0..@compareset.size() - 1)
            dispvalue = @compareset.getOutcomeDetailValue(studyidx,dispname)
            if dispvalue.nil?
                dispvalue = "-"
            end
            # remove any line feeds, convert to simple space
            dispvalue = dispvalue.gsub( /\r\n/m, " " )

            if ndiff <= 1
                # No difference across studies - just display value
%>
            <td class="compare_studies_data">
            <input type="hidden" name="merge_outds_<%= outdidx.to_s %>_default<%= studyidx.to_s %>" value="<%= dispvalue.to_s %>">
            <%= dispvalue.to_s %>
            </td>
<%
            else
%>
            <td class="compare_studies_data">
            <input type="radio" title="Select the value <%= dispvalue %> for <%= dispname %>: Study <%= @alphabet[studyidx] %>" name="merge_outds_<%= outdidx.to_s %>" value="<%= dispvalue.to_s %>" onclick="selectOutcomeDetail(<%= studyidx.to_s %>,<%= outdidx.to_s %>,'<%= dispvalue.to_s %>',<%= @compareset.size() %>)">&nbsp;
            <%= dispvalue.to_s %>
            </td>
<%
            end
        end
        consensus_value = "Select value"
        if ndiff <= 1
            consensus_value = @compareset.getOutcomeDetailValue(0,dispname)
        end
%>
            <td class="compare_studies_adata">
            <img src="/images/action_forward.gif" border="0" alt="The merged consensus outcome detail data will appear in the cell to the right upon selection">
            </td>
            <td class="compare_studies_data">
            <input type="hidden" name="merge_outds_<%= outdidx.to_s %>_id" value="<%= @compareset.getOutcomeDetailIDByStudy(0,outdidx).to_s %>">
            <input type="hidden" name="merge_outds_<%= outdidx.to_s %>_name" value="<%= dispname %>">
            <%= text_area_tag "merge_outds_"+outdidx.to_s+"_text", consensus_value, :value=>consensus_value %>
            </td>
        </tr>
<%
        ridx = ridx + 1
    end
%>
    </table>
